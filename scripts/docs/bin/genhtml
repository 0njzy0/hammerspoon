#!/usr/bin/env ruby
require 'json'
require 'github/markdown'
require 'erb'

outdir = ARGV.first
docmods = JSON.load(STDIN.read)

mod_template   = ERB.new(File.read('scripts/docs/templates/ext.html.erb'))
index_template = ERB.new(File.read('scripts/docs/templates/index.html.erb'))

content = GitHub::Markdown.render_gfm(File.read('scripts/docs/templates/index.md'))
html = index_template.result(binding)
File.write("#{outdir}/index.html", html)

docmods.each do |mod|
  File.write("#{outdir}/#{mod['name']}.html", mod_template.result(binding))
end
